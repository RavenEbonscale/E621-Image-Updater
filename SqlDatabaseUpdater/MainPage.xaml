<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqlDatabaseUpdater.MainPage"
             BackgroundImageSource="background.png"
                        
             >
 
    <ScrollView                 >
     
         
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <VerticalStackLayout.Background>
                <LinearGradientBrush StartPoint=".1,.2"
                                     EndPoint="0,.9"
                                     >
                    <GradientStopCollection>
                        <GradientStop Offset="0" Color="#000000d9"/>
                        <GradientStop Offset="1" Color="black"/>
                    </GradientStopCollection>
                </LinearGradientBrush>
            </VerticalStackLayout.Background>

            <Entry x:Name="TagInput"
                   Placeholder="Enter Tags"
                   Completed= "TagInput_Completed"
                   BackgroundColor="Black"
                   TextColor="BurlyWood"
                   HorizontalTextAlignment="Center"
                   PlaceholderColor="MintCream"

                   />


            <Label x:Name="Sucess"
                  
                   Text="Sucess~"
                   />


        </VerticalStackLayout>
      
    </ScrollView>

</ContentPage>
